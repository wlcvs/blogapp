{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-boy">
        <h4>Nova postagem: </h4>
        <form action="/admin/postagens/nova" method="post">
            <label for="titulo">Título: </label>         
            <input type="text" name="titulo" class="form-control" required>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" required>
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" required>            
            <label for="categoria">Categoria</label>
            <select name="categoria" class="form-select" required>
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select><br>
            <label for="conteudo" class="mt-2">Conteúdo: </label>            
            <textarea name="conteudo" class="form-control"></textarea required>
            <br>
            <button class="btn btn-success" type="submit">Criar postagem</button>
        </form>
    </div>
</div>

