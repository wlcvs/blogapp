<h2>Lista de categorias: </h2>
<hr>

{{#each categorias}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-sm btn-success mt-4">Editar categoria</button></a>
            <form action="/admin/categorias/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-sm btn-danger mt-1">Deletar categoria</button>
            </form>
        </div>        
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada!</h4>
{{/each}}

<a href="/admin/categorias/add"><button class="btn btn-success mt-2">Nova categoria</button></a>